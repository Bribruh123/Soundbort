#!/bin/bash

SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

cd "$SCRIPT_DIR/../"

if [[ "$NODE_ENV" != "production" && "$NODE_ENV" != "staging" ]]
then
    NODE_ENV=development FORCE_COLOR=1 node --loader ts-node/esm src/cli.ts "$@" | less -r
else
    FORCE_COLOR=1 node dist/cli.js "$@" | less -r
fi
